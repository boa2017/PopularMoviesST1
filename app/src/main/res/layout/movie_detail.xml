<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    tools:context="com.example.android.popularmoviesst1.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnail"
            style="@style/thumbnail"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/title_heading"
            style="@style/title_heading" />

        <TextView
            android:id="@+id/movie_title"
            style="@style/movie_title" />

        <TextView
            android:id="@+id/date_heading"
            style="@style/date_heading" />

        <TextView
            android:id="@+id/release_date"
            style="@style/release_Date" />

        <TextView
            android:id="@+id/vote_heading"
            style="@style/vote_heading" />

        <RatingBar
            android:id="@+id/movie_vote_average_section"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/thumbnail"
            android:layout_alignStart="@+id/thumbnail"
            android:layout_below="@+id/vote_heading"
            android:isIndicator="true"
            android:numStars="5"
            android:theme="@style/RatingBar" />

        <TextView
            android:id="@+id/tv_movie_vote_average"
            style="@style/tv_movie_vote_average" />

        <TextView
            android:id="@+id/overview_heading"
            style="@style/overview_heading" />

        <TextView
            android:id="@+id/movie_overview"
            style="@style/movie_overview" />

    </RelativeLayout>
</ScrollView>